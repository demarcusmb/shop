<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Game Store Page</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>

    <div class="header">
        <h1>List of Games</h1>
    </div>
    <div class="nav">
        <a href="/"><h2>Home</h2></a>
        <a href="/merch"><h2>Merch Page</h2></a>
    </div>
    <div class="row">
        <div class="maincontent">
            <% games.forEach(games=> { %>
                <div class="products">
                    <a href="/games/<%= games._id %>">
                        <%= games.title %><br>
                            <img src="<%= games.img %>" /> <br>
                            Price: $<%=games.price%><br>
                    </a>

                </div>
                <% }) %>
        </div>
    </div>

</body>
<div class="footer">
    <h2> <a href="/games/new">Add a New Game</a></h2>
    </form>
</div>

</html>